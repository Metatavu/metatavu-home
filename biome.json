{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessFragments": "error"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"correctness": {
				"noUnusedVariables": "error"
			}
		},
		"ignore": ["/generated"]
	},
	"javascript": {
		"formatter": {
		"trailingComma": "none"
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentWidth": 2,
		"indentStyle": "space",
		"formatWithErrors": false,
		"ignore": ["/generated"]
	}
}
